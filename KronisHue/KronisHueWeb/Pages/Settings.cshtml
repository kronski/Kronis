@page
@model KronisHueWeb.Pages.AuthModel
@{
    ViewData["Title"] = "Settings";
}

@section Scripts
{
    <script src="~/js/settings.js" type="module"></script>
}

<h1>Settings</h1>

<h2>Remote access</h2>

<label for="codeLabel">Authenticate site for hue</label>
<div class="input-group mb-3">
    <input id="codeLabel" type="text" class="form-control">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="authButton">Visit hue to authenticate</button>
    </div>
</div>

<label for="nonceLabel">Nonce</label>
<div class="input-group mb-3">
    <input id="nonceLabel" type="text" class="form-control">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="nonceButton">Get nonce</button>
    </div>
</div>

<label for="accessToken">Access token</label>
<div class="input-group mb-3">
    <input id="accessToken" type="text" class="form-control">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="tokenButton">Get token</button>
    </div>
</div>

<label for="accessTokenExpires">Access token expires</label>
<div class="input-group mb-3">
    <input id="accessTokenExpires" type="text" class="form-control">
</div>

<label for="rWefreshToken">Refresh token</label>
<div class="input-group mb-3">
    <input id="refreshToken" type="text" class="form-control">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="refreshTokenButton">Refresh token</button>
    </div>
</div>

<label for="refreshTokenExpires">Refresh token expires</label>
<div class="input-group mb-3">
    <input id="refreshTokenExpires" type="text" class="form-control">
</div>

<label for="username">Username</label>
<div class="input-group mb-3">
    <input id="username" type="text" class="form-control">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="usernameButton">Get username</button>
    </div>
</div>

<h2>Local access</h2>

<label for="username">Base url</label>
<div class="input-group mb-3">
    <input id="baseUrl" type="text" class="form-control">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="locateHueButton">Locate local hue</button>
    </div>
</div>

<label for="username">Username</label>
<div class="input-group mb-3">
    <input id="localusername" type="text" class="form-control">

    <div class="input-group-append"><i class="input-group-text fa align-middle" id="baseUrlIcon"></i></div>
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="registerLocalHueButton">Register on local hue</button>
    </div>
    <div class="invalid-feedback" id="localusername-feedback" />
</div>


<div class="input-group mb-3">
    <label for="username">Auto refresh state</label>
    <input id="autoRefreshState" type="checkbox" class="form-control">
</div>